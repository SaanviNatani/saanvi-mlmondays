---
export interface Props {
  name: string;
  role?: string;
  avatar?: string;
}

const { name, role = 'Contributor', avatar = '/avatar-placeholder.png' } = Astro.props as Props;
---

<article class="flex gap-4 items-center bg-slate-800/50 p-4 rounded-lg border border-slate-700">
  <img src={avatar} alt={name} class="w-12 h-12 rounded-full object-cover" />
  
  <div>
    <div class="font-semibold text-white">{name}</div>
    <div class="text-slate-300 text-sm">{role}</div>
  </div>
</article>
