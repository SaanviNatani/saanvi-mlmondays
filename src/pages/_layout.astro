---
import '../styles/global.css';
import FloatingCTA from '../components/FloatingCTA.astro';
const { title = 'ML Mondays', description = 'Neural Hive – ML Mondays' } = Astro.props;
---
<!doctype html>
<html lang="en" class="antialiased">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <slot name="head" />
  </head>
  <body class="bg-hive-900 text-slate-100 min-h-screen">
    <header class="border-b border-slate-800">
      <div class="site-container flex items-center justify-between py-6">
        <a href="/" class="text-2xl font-bold text-violet-400">ML Mondays</a>
        <nav class="space-x-6 text-slate-200">
          <a href="/posts" class="hover:underline">Posts</a>
          <a href="/about" class="hover:underline">About</a>
          <a href="/write-for-us" class="hover:underline">Write for Us</a>
          <a href="/ethos">Ethos</a>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="border-t border-slate-800 mt-16">
      <div class="site-container py-8 flex items-center justify-between">
        <div>© {new Date().getFullYear()} ML Mondays — Neural Hive</div>
        <div class="text-slate-400">Built with ❤️ · Astro</div>
      </div>
    </footer>

    <FloatingCTA />
  </body>
</html>
